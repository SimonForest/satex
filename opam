  "ocaml" {>= "4.08.0"}
]
bug-reports: "https://github.com/smimram/satex/issues"
dev-repo: "git+https://github.com/smimram/satex.git"
synopsis: "String diagram generator for LaTeX"
description: """
Satex takes descriptions of string diagrams in the form of categorical
compositions and converts them to string diagrams drawn in TikZ.
"""
